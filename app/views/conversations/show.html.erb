<h1>Conversations#show</h1>
<!-- やりとりしているメッセージの一覧 -->
<!-- ownerがログインしていたら -->
<% if owner_signed_in? %>
<div class="conversation-people"><%= @conversation.customer.nickname %>とやりとり中</div>
	<% @messages.each do |m| %>
		<% if m.is_customer %>
			<div class="left-side message-item"><%= @conversation.customer.nickname %><%= m.message %></div>
		<% else %>
			<div class="right-side message-item"><%= m.message %></div>
		<% end %>
	<% end %>
<% end %>

<!-- customerがログインしていたら -->
<% if customer_signed_in? %>
<div class="conversation-people"><%= @conversation.owner.nickname %>とやりとりしていますよ！！</div>
	<% @messages.each do |m| %>
		<% if m.is_customer %>
			<div class="right-side message-item"><%= m.message %></div>
		<% else %>
			<div class="left-side message-item"><%= @conversation.owner.nickname %><%= m.message %></div>
		<% end %>
	<% end %>
<% end %>



<!-- メッセージ作成 -->
<%= form_for @conversation.messages.new , url: conversation_messages_path(@conversation.id) do |f| %>
<%= f.text_field :message %>
<%= f.submit "送信" %>
<% end %>

