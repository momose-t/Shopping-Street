<h1>Stores#show</h1>
<p>お店の詳細紹介</p>

<div class="store-show">
	<div><%= attachment_image_tag @store, :image,:fill,400,400, fallback: "no_image.jpg",size:'400x400' %></div>
	<div><%= @store.store_name %></div>
	<div><%= @store.good %></div>
	<div><%= @store.introduction %></div>
</div>

	<div class="post-box">
		<% @posts.each do |post|%>
		<div class="post-item">
			<%= attachment_image_tag post, :image, :fill,150,200,fallback:"no_image.jpg",size:'150x200'%>
			<%= post.comment %>
		</div>
		<% end %>
	</div>